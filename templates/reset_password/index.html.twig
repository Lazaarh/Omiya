{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}

    <div class="block-login">
        {% for message in app.flashes('notice') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}
        <form method="post">

            <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
            <label for="inputEmail">Email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre email" required autofocus>

            <button class="btn btn-block btn-primary mt-3" type="submit">
                Valider
            </button>

            <hr>

            <p class="text-center"><a href={{ path('app_login') }}>Vous connecter </a></p>
        </form>

    </div>


{% endblock %}
